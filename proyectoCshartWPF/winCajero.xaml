<Window x:Class="proyectoCshartWPF.winCajero"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proyectoCshartWPF"
        mc:Ignorable="d"
        Title="winCajero" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Bienvenido" HorizontalAlignment="Center" FontSize="20"/>
            <Label x:Name="lbnombre" Content="Nombre" HorizontalAlignment="Center" FontSize="20"/>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Gestionar Ventas" FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Gestionar Clientes" FontSize="30"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
                <Button Content="Reportes de Ventas" FontSize="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
